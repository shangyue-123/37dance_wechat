<swiper  autoplay interval="3000" indicator-dots="{{false}}" indicator-color='#8a8a8a' indicator-active-color='#333' circular="true" class="swiper-block" bindchange="swiperChange" previous-margin="100rpx" next-margin="100rpx" current="0" >
  <block wx:for="{{imgUrls}}" wx:index="{{index}}" wx:key="*this">
    <swiper-item class="swiper-item ">
      <image mode="aspectFill" src="{{item}}" class="slide-image {{currentIndex == index ? 'active' : 'common'}}" bindtap="image_click" />
    </swiper-item>
  </block>
</swiper>

